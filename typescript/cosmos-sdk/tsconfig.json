{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es6",
      "declaration": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "rootDir": "src",
      "outDir": "dist"
    },
    "exclude": [
      "node_modules"
    ],
    "include": ["src/**/*"]
  }